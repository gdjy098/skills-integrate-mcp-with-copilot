{
  "name": "Python 3",
  "image": "mcr.microsoft.com/vscode/devcontainers/python:3.13-bookworm",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }    
  },
  "forwardPorts": [8000],
  "postCreateCommand": "sudo apk add --no-cache py3-pip && pip install --break-system-packages -r requirements.txt",
  "customizations": {
    "vscode": {
      "extensions": [
        "GitHub.copilot",
        "ms-python.python",
        "ms-python.debugpy",
        "dbaeumer.vscode-eslint"
      ],
      "settings": {
        "chat.agent.enabled": true,
        "chat.mcp.enabled": true
      }
    }
  }
}
